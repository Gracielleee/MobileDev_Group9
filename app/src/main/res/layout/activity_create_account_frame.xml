<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white"
    tools:context=".ActivityCreateAccount">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingVertical="16dp">

        <!-- 🔙 Back Arrow -->
        <ImageButton
            android:id="@+id/backArrow"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_margin="4dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/back_arrow"
            app:tint="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 🏷️ Title -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Create account"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/backArrow" />

        <!-- 💬 Subtitle -->
        <TextView
            android:id="@+id/subTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Sign up to continue"
            android:textSize="14sp"
            android:textColor="#777777"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <!-- ✉️ Email -->
        <EditText
            android:id="@+id/emailField"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:hint="example@gmail.com"
            android:inputType="textEmailAddress"
            android:background="@drawable/edittext_bg"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textColorHint="#AAAAAA"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/subTitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🔒 Password -->
        <EditText
            android:id="@+id/passwordField"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:hint="Create password"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textColorHint="#AAAAAA"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/emailField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🔁 Confirm Password -->
        <EditText
            android:id="@+id/confirmPasswordField"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:hint="Re-enter password"
            android:inputType="textPassword"
            android:background="@drawable/edittext_bg"
            android:paddingStart="16dp"
            android:textColor="@color/black"
            android:textColorHint="#AAAAAA"
            android:fontFamily="@font/poppins_medium"
            app:layout_constraintTop_toBottomOf="@id/passwordField"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ✅ Terms and Conditions -->
        <CheckBox
            android:id="@+id/termsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="I agree to the Terms and Conditions"
            android:textSize="13sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/confirmPasswordField"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- 🟥 Create Account Button -->
        <Button
            android:id="@+id/createAccountSubmit"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#fd5755"
            android:text="Create Account"
            android:textColor="@color/white"
            android:textSize="17sp"
            android:fontFamily="@font/poppins_medium"
            android:elevation="3dp"
            app:cornerRadius="30dp"
            app:layout_constraintTop_toBottomOf="@id/termsCheckBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🔘 Divider Text -->
        <TextView
            android:id="@+id/orText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="or sign up with"
            android:textSize="14sp"
            android:textColor="#777777"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/createAccountSubmit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🟢 Google Sign-in -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/googleButton"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:text="Google"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            app:icon="@drawable/google_icon"
            app:iconGravity="textStart"
            app:iconTint="@null"
            app:strokeColor="#CCCCCC"
            app:strokeWidth="1dp"
            app:layout_constraintTop_toBottomOf="@id/orText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 🔗 Already have account + Link -->
        <LinearLayout
            android:id="@+id/alreadyAccountLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/googleButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/alreadyAccountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? "
                android:textColor="@color/black"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium" />

            <TextView
                android:id="@+id/linkText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                android:textColor="#2282C9"
                android:textStyle="bold"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_medium"
                android:clickable="true"
                android:focusable="true" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
