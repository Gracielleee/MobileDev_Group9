<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="0.5"
    android:columnCount="2"
    android:rowCount="1"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="0"
        android:orientation="vertical"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="5dp">
        <LinearLayout
            android:id="@+id/note_item"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/note_square_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/note_item_contact_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/brownie" />

            <TextView
                android:id="@+id/note_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Food"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/note_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Potato, tomato, carrot"
                android:textColor="#444"
                android:textSize="14sp" />

            <Button
                android:id="@+id/note_item_tag"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#EAD9A8"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="8dp"
                android:text="Likes"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/note_item2"
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:background="@drawable/note_square_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/note_item_contact_img2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginBottom="6dp"
                android:src="@drawable/brownie" />

            <TextView
                android:id="@+id/note_item_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Song"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/note_item_desc2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="Cappuccino Assassino"
                android:textColor="#444"
                android:textSize="14sp" />

            <Button
                android:id="@+id/note_item_tag2"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:backgroundTint="#EAD9A8"
                android:fontFamily="@font/poppins_medium"
                android:paddingHorizontal="8dp"
                android:text="Likes"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

</GridLayout>

</ScrollView>