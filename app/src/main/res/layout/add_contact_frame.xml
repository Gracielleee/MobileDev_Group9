<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@android:color/white">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="60dp"
        android:layout_height="64dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:clickable="true"
        android:contentDescription="Back button"
        android:src="@drawable/arrow_back_black">

    </ImageButton>


    <ImageButton
        android:id="@+id/profile_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_alignTop="@id/backButton"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/add_photo_ic">

    </ImageButton>

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backButton"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@id/profile_img_btn"
        android:layout_marginStart="20dp"
        android:layout_marginTop="180dp"
        android:hint="Enter Name"
        android:textColorHint="#757575"
        android:textColor="@color/black"
        android:textSize="45sp"
        android:background="@android:color/transparent"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="120dp"
        android:layout_below="@id/name"
        android:layout_alignStart="@+id/name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:hint="description here..."
        android:textColorHint="#757575"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@+id/key_dates_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Key Dates:"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/add_icon_btn_linkto"
        android:layout_alignBottom="@id/contact_channels_btn"
        android:layout_alignStart="@id/name"
        android:layout_marginBottom="50dp">

    </Button>

    <Button
        android:id="@+id/contact_channels_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:text="Contact Channels:"
        android:textColor="@color/black"
        android:drawableEnd="@drawable/add_icon_btn_linkto"
        android:layout_alignBottom="@id/group_list"
        android:layout_alignStart="@id/name"
        android:layout_marginBottom="80dp">

    </Button>

    <LinearLayout
        android:id="@+id/group_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/name"
        android:layout_marginBottom="95dp">

        <Button
            android:id="@+id/select_group_button"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select group"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:backgroundTint="@color/grey"
            android:drawableEnd="@drawable/add_icon_btn_linkto"
            android:drawablePadding="40dp"/>

    </LinearLayout>

    <!-- Checkmark Button -->
    <ImageButton
        android:id="@+id/check_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/check_ic_background"
        android:layout_alignTop="@id/group_list"
        android:src="@drawable/check_ic"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="25dp"/>

</RelativeLayout>
