<!-- res/drawable/layer_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>

    <!-- Border -->
    <item android:bottom="10dp" android:start="10dp"
        android:end="10dp" android:top="10dp">
        <shape>
            <solid android:color="@android:color/transparent"/>
            <stroke
                android:width="10dp"
                android:color="@android:color/holo_blue_light"/>
        </shape>
    </item>
</layer-list>
